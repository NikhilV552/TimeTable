<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_height="350dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000ff">

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:text="PERIOD"/>
            <TextView
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/period"
                android:text="MONDAY"/>


            <TextView
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/monday"
                android:text="TUESDAY"/>
            <TextView
                android:id="@+id/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/tuesday"
                android:text="WEDNESDAY"/>
            <TextView
                android:id="@+id/thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/wednesday"
                android:text="THURSDAY"/>
            <TextView
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/thursday"
                android:text="FRIDAY"/>
            <TextView
                android:id="@+id/saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/friday"
                android:text="SATURDAY"/>
            <TextView
                android:id="@+id/period1"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD1"/>
            <TextView
                android:id="@+id/period2"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period1"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD2"/>
            <TextView
                android:id="@+id/period3"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period2"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD3"/>
            <TextView
                android:id="@+id/period4"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period3"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD4"/>
            <TextView
                android:id="@+id/period5"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period4"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD5"/>
            <TextView
                android:id="@+id/period6"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period5"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD6"/>
            <TextView
                android:id="@+id/period7"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period6"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD7"/>
            <TextView
                android:id="@+id/period8"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/period7"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="PERIOD8"/>


            </RelativeLayout>

        </ScrollView>
    </HorizontalScrollView>


</RelativeLayout>